<Window x:Class="Pwtter.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pwtter"
        mc:Ignorable="d"
        Title="AuthWindow" Height="300" Width="300" Closed="Window_Closed">
    <StackPanel Margin="20,10" >
        <TextBlock />
        <TextBlock >下記URLにアクセス:</TextBlock>
        <TextBox x:Name="urlBox" FontSize="12" Height="auto" Width="auto" TextWrapping="Wrap"/>
        <Button Padding="10,2" HorizontalAlignment="Left" Click="AccessButton_Click">アクセス</Button>
        <TextBlock />
        <TextBlock>表示されるPINを入力</TextBlock>
        <TextBox x:Name="pinBox" />
        <TextBlock />
        <Button Padding="10,2" HorizontalAlignment="Left" Click="OkButton_Click"
                IsEnabled="False" x:Name="okButton">認証</Button>
    </StackPanel>
</Window>
